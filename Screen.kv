windowManager:
    id: windowManagement
    LoginScreen:
        name: "login"
    EstoqueScreen:
        name: "estoque"
    AddScreen:
        name: "add"
    EditScreen:
        name: "edit"
    FinanceiroScreen:
        name: "financeiro"
    AddFinanceiroScreen:
        name: "addFinanceiro"
    LogsScreen:
        name: "logs"
    FeedScreen:
        name: "feed"

<LoginScreen>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDTextFieldRound:
            id: user
            hint_text: "Usuário"
            icon_right: "account"
            required: True
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            on_text_validate: app.verificarLogin(user.text, password.text)

        MDTextFieldRound:
            id: password
            hint_text: "Senha"
            icon_right: "eye-off"
            required: True
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
            on_text_validate: app.verificarLogin(user.text, password.text)

        MDLabel:
            id: error_label
            text: ""
            theme_text_color: "Error"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        Widget:
            size_hint_y: None
            height: 10

        MDRoundFlatButton:
            text: "Entrar"
            id: entrar
            font_size: 15
            pos_hint: {"center_x": 0.5}
            on_press: app.verificarLogin(user.text, password.text)
            

    MDLabel:
        id: title_label
        text: "Casa linda"
        font_size: 40
        halign: 'center'
        size_hint_y: 1.85
        height: self.texture_size[1]
        padding_y: 15


<EstoqueScreen>:
    MDLabel:
        id: error_label_estoque
        text: ""
        theme_text_color: "Error"
        font_size: 15
        valign: 'center'
        halign: 'justify'
        size_hint_y: None
        height: self.texture_size[1]
        padding_y: 5

    MDBoxLayout:
        orientation: 'vertical'
        padding: 10

        MDToolbar:
            title: "Área Estoque"
            orientation: 'horizontal'
            elevation: 10

            MDRaisedButton:
                text: "Inicio"
                pos_hint: {"center_x": 0, "center_y": 0.5}
                on_release: app.changeFeed()
                y: 10

            MDRaisedButton:
                text: "Financeiro"
                pos_hint: {"center_x": 0, "center_y": 0.5}
                on_release: app.changeFinanceiro()
                y: 10

            MDRaisedButton:
                text: "Logs"
                pos_hint: {"center_x": 0, "center_y": 0.5}
                on_release: app.changeLogs()
                y: 10

            MDRaisedButton:
                text: "Sair"
                pos_hint: {"center_x": 0, "center_y": 0.5}
                on_release: app.changeSair()
                y: 10

            MDIconButton:
                icon: "lamp"
                pos_hint: {"center_x": 0, "center_y": 0.5}
                theme_icon_color: "Custom"
                y: 10
                on_release: app.changeTheme()
        
        AnchorLayout:
            id: data_layout

    MDBoxLayout:
        orientation: 'horizontal'
        padding: 10

        MDLabel:
            text: "MAX"
            pos_hint: {"center_y": 0.04}
            font_size: 15

        MDCheckbox:
            id: max
            size_hint: None, None
            pos_hint: {"center_y": 0.04}
            active: True

        MDTextField:
            id: preco
            hint_text: "Preço"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_y": 0.04}
            on_text_validate : app.buscaPersonalizada(busca.text, preco.text, True if max.active else False)

        MDLabel:
            text: " "
            pos_hint: {"center_y": 0.04}
            font_size: 15

        MDTextField:
            id: busca
            hint_text: "Nome"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_y": 0.04}
            on_text_validate : app.buscaPersonalizada(busca.text, preco.text, True if max.active else False)

        MDRaisedButton:
            text: "Filtrar"
            pos_hint: {"center_y": 0.04}
            on_release: app.buscaPersonalizada(busca.text, preco.text, True if max.active else False)
            y: 10

        MDLabel:
            text: " "
            pos_hint: {"center_y": 0.04}
            font_size: 15

        MDRaisedButton:
            text: "Adicionar"
            pos_hint: {"center_x": 0.5, "center_y": 0.04}
            on_release: app.addScreen()
            y: 10

<AddScreen>:
    MDLabel:
        id: add_title
        text: "Adicionar Produto"
        font_size: 40
        halign: 'center'
        size_hint_y: 1.85
        height: self.texture_size[1]
        padding_y: 15

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDTextField:
            id: nome
            hint_text: "Nome"
            size_hint_x: None
            pos_hint: {"center_x": 0.5}
            width: 200
            font_size: 18
            on_text_validate : app.adicionaDado(nome.text, desc.text, preco.text)

        MDTextField:
            id: desc
            hint_text: "Desc"
            size_hint_x: None
            max_text_length: 20
            pos_hint: {"center_x": 0.5}
            width: 200
            font_size: 18
            on_text_validate : app.adicionaDado(nome.text, desc.text, preco.text)
            
        MDTextField:
            id: preco
            hint_text: "Preco"
            size_hint_x: None
            pos_hint: {"center_x": 0.5}
            width: 200
            font_size: 18
            on_text_validate : app.adicionaDado(nome.text, desc.text, preco.text)


        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {"center_x": 0.6, "center_y": 0.5}
            padding: 10

            MDRoundFlatButton:
                text: "Adicionar"
                font_size: 15
                pos_hint: {"center_y": 0.5}
                on_press: app.adicionaDado(nome.text, desc.text, preco.text)

            MDRoundFlatButton:
                text: "Sair"
                font_size: 15
                pos_hint: {"center_y": 0.5}
                on_press: app.changeEstoque()

        MDLabel:
            id: error_label_add
            text: ""
            theme_text_color: "Error"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15


windowManager:
    id: windowManagement
    LoginScreen:
        name: "login"
    EstoqueScreen:
        name: "estoque"
    AddScreen:
        name: "add"
    EditScreen:
        name: "edit"
    FinanceiroScreen:
        name: "financeiro"
    AddFinanceiroScreen:
        name: "addFinanceiro"

<LoginScreen>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDTextFieldRound:
            id: user
            hint_text: "Usuário"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            on_text_validate: app.verificarLogin(user.text, password.text)

        MDTextFieldRound:
            id: password
            hint_text: "Senha"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
            on_text_validate: app.verificarLogin(user.text, password.text)

        MDLabel:
            id: error_label
            text: ""
            theme_text_color: "Error"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        Widget:
            size_hint_y: None
            height: 10

        MDRoundFlatButton:
            text: "Entrar"
            font_size: 15
            pos_hint: {"center_x": 0.5}
            on_press: app.verificarLogin(user.text, password.text)

    MDLabel:
        id: title_label
        text: "Casa linda"
        font_size: 40
        halign: 'center'
        size_hint_y: 1.85
        height: self.texture_size[1]
        padding_y: 15


<EstoqueScreen>:
    MDLabel:
        id: error_label_estoque
        text: ""
        theme_text_color: "Error"
        font_size: 15
        valign: 'center'
        halign: 'justify'
        size_hint_y: None
        height: self.texture_size[1]
        padding_y: 5

    MDBoxLayout:
        orientation: 'vertical'
        padding: 10

        MDToolbar:
            title: "Casa Linda"
            orientation: 'horizontal'
            elevation: 10

            MDRaisedButton:
                text: "Financeiro"
                pos_hint: {"center_x": 0, "center_y": 0.5}
                on_release: app.changeFinanceiro()
                y: 10

            MDRaisedButton:
                text: "Logs"
                pos_hint: {"center_x": 0, "center_y": 0.5}
                y: 10

            MDRaisedButton:
                text: "Sair"
                pos_hint: {"center_x": 0, "center_y": 0.5}
                on_release: app.changeSair()
                y: 10
        
        AnchorLayout:
            id: data_layout
    
    MDRaisedButton:
        text: "Adicionar"
        pos_hint: {"center_x": 0.5}
        on_release: app.addScreen()
        y: 10

<AddScreen>:
    MDLabel:
        id: add_title
        text: "Adicionar Produto"
        font_size: 40
        halign: 'center'
        size_hint_y: 1.85
        height: self.texture_size[1]
        padding_y: 15

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDTextField:
            id: nome
            hint_text: "Nome"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            on_text_validate : app.adicionaDado(nome.text, desc.text, preco.text)

        MDTextField:
            id: desc
            hint_text: "Desc"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            on_text_validate : app.adicionaDado(nome.text, desc.text, preco.text)
            
        MDTextField:
            id: preco
            hint_text: "Preco"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            on_text_validate : app.adicionaDado(nome.text, desc.text, preco.text)

        MDRoundFlatButton:
            text: "Adicionar"
            font_size: 15
            pos_hint: {"center_x": 0.5}
            on_press: app.adicionaDado(nome.text, desc.text, preco.text)

        MDRoundFlatButton:
            text: "Sair"
            font_size: 15
            pos_hint: {"center_x": 0.5}
            on_press: app.changeEstoque()

        MDLabel:
            id: error_label_add
            text: ""
            theme_text_color: "Error"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15


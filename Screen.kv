windowManager:
    id: windowManagement
    LoginScreen:
        name: "login"
    EstoqueScreen:
        name: "estoque"

<LoginScreen>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDTextFieldRound:
            id: user
            hint_text: "Usu√°rio"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "Senha"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDLabel:
            id: error_label
            text: ""
            theme_text_color: "Error"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        Widget:
            size_hint_y: None
            height: 10

        MDRoundFlatButton:
            text: "Entrar"
            font_size: 15
            pos_hint: {"center_x": 0.5}
            on_press: app.verificarLogin(user.text, password.text)


    MDLabel:
        id: title_label
        text: "Casa linda"
        font_size: 40
        halign: 'center'
        size_hint_y: 1.85
        height: self.texture_size[1]
        padding_y: 15


<EstoqueScreen>:
    MDTextFieldRound:
        id: search
        hint_text: "Nome do produto"
        icon_right: "search"
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {"center_x": 0.5}
            padding: 10

            MDRoundFlatButton:
                text: "Adicionar"
                font_size: 15
                pos_hint: {"center_y": 0.5}
                on_press: app.adicionaFinanceiro(cod.text, tipo.text, qtde.text, valor.text)

            MDRoundFlatButton:
                text: "Sair"
                font_size: 15
                pos_hint: {"center_y": 0.5}
                on_press: app.changeFinanceiro()

        MDLabel:
            id: error_label_add_financeiro
